.con {
  display: flex;
  background-color: #fff;
  flex-direction: column;
  color: #212121
}
.search_con{
  display: flex;
  align-items: center;
  position: fixed;
  flex: 1;
  background-color: #fff;
  width: 100%
}
.search{
  flex: 1;
  border: 1rpx solid #e9e9e9;
  font-size: 35rpx;
  border-radius: 10rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  padding: 8rpx
}
.search_txt{
  margin-right: 10rpx;
    font-size: 32rpx;
}
.list_con {
  padding: 12rpx;
  margin-top: 52rpx
}

.list_item {
  display: flex;
  flex-direction: column;
  padding-bottom: 8rpx;
  margin-top: 12rpx;
  border-bottom: 1rpx solid #e9e9e9;
}

.title {
  font-size: 32rpx;
}

.author {
  font-size: 26rpx;
  color: gray;
  margin-left: 8rpx
}

.content {
  display: -webkit-box !important;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  font-size: 30rpx;
  line-height: 40rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-top: 5rpx;

}
.bottom{
  background-color: #f7f7f7;
  display: flex;
  justify-content: center;
  color: grey;
  font-size: 28rpx;
  padding-top: 5rpx;
  padding-bottom: 5rpx
  
}